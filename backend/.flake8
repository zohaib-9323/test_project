[flake8]
max-line-length = 127
extend-ignore = E203, W503, W293, W291, E501
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
per-file-ignores =
    __init__.py:F401
    tests/*:F401
max-complexity = 15
select = E,W,F
ignore = 
    E501,
    E203,
    W503,
    W293,
    W291,
    F401
