#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Change to frontend directory
cd frontend

# Run prettier formatting
echo "ğŸ¨ Running Prettier..."
npm run format

# Run linting
echo "ğŸ“ Running ESLint..."
npm run lint:fix

# Check if there are any linting errors
if [ $? -ne 0 ]; then
  echo "âŒ ESLint found errors. Please fix them before committing."
  exit 1
fi

# Run TypeScript check
echo "ğŸ”§ Running TypeScript check..."
npx tsc --noEmit

if [ $? -ne 0 ]; then
  echo "âŒ TypeScript found errors. Please fix them before committing."
  exit 1
fi

# Run build check
echo "ğŸ—ï¸ Running build check..."
npm run build

if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Please fix errors before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
