#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-push checks..."

# Change to frontend directory
cd frontend

# Run all tests (if available)
echo "ğŸ§ª Running tests..."
npm test -- --passWithNoTests 2>/dev/null || echo "No tests found, skipping..."

# Run prettier check
echo "ğŸ¨ Final prettier check..."
npm run format:check

if [ $? -ne 0 ]; then
  echo "âŒ Prettier found formatting issues. Please run 'npm run format' to fix them."
  exit 1
fi

# Run linting one more time
echo "ğŸ“ Final linting check..."
npm run lint

if [ $? -ne 0 ]; then
  echo "âŒ Linting errors found. Please fix them before pushing."
  exit 1
fi

# Check for uncommitted changes
if [ -n "$(git status --porcelain)" ]; then
  echo "âš ï¸  You have uncommitted changes. Please commit them before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed! Ready to push."
